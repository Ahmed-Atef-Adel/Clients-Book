<header class="mb-auto">
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="float-md-start mb-0">
      <a class="btn fs-2 text-white fw-bold" href="/home">Home</a>
    </h3>

    <% if (user) { %>
    <div class="d-felx align-items-center">
      <p class="me-2">Welcome: <%= user.email %></p>
      <a class="fw-bold btn btn-light" href="/signup">Sign out</a>
    </div>

    <% } else { %>

    <nav class="nav nav-masthead justify-content-center float-md-end">
      <a
        class="fw-bold btn <%= currentPage == 'login' ? 'btn-light' : null %>"
        href="/login"
        >Log in</a
      >
      <a
        class="fw-bold btn <%= currentPage == 'signup' ? 'btn-light' : null %>"
        href="/signup"
        >Sign up</a
      >
    </nav>
    <% } %>
  </div>
</header>
